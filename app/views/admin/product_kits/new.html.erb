<h1>Admin - Cadastro de um novo Kit de Produtos</h1>
<div class="row">
  <div class="col-4 vrr-dark-gray">
    <%= render 'admin/sidebar' %>
  </div>

  <div class="col-8">
    <%= render 'shared/errors', object: @product_kit %>

    <%= form_for [:admin, @product_kit] do |f| %>
    <div class="row">

      <div class="form-group col-md-12">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :price %>
        <%= f.number_field :price, step: 0.01, class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :weight %>
        <%= f.number_field :weight, placeholder: ' kg', step: 0.1, class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :width %>
        <%= f.number_field :width, placeholder: ' mm', class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :height %>
        <%= f.number_field :height, placeholder: ' mm', class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :thickness %>
        <%= f.number_field :thickness, placeholder: ' mm', class: 'form-control' %>
      </div>

      <div class="form-group col-md-3">
        <%= f.label :warranty %>
        <%= f.number_field :warranty, placeholder: ' meses', class: 'form-control' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :picture %>
        <%= f.file_field :picture, class: 'form-control-file' %>
      </div>

    </div>

    <%= f.submit 'Enviar', class: 'btn btn-purple float-right' %>

    <% end %>
  </div>
</div>