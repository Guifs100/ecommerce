<h1>Placa Solar</h1>

<dl>
  <dt>Nome:</dt>
  <dd><%= @solar_plate.name %></dd>

  <dt>Dimensão:</dt>
  <dd>
    <%= "#{@solar_plate.width}mm (L)"  %>
    <%= "x #{@solar_plate.height}mm (A)" %>
    <%= "x #{@solar_plate.thickness}mm (E)" %>
  </dd>

  <dt>Peso:</dt>
  <dd>
    <%= "#{number_with_precision @solar_plate.weight, precision: 2} kg" %>
  </dd>

  <dt>Preço de compra:</dt>
  <dd><%= number_to_currency @solar_plate.purchase_price %></dd>

  <dt>SKU:</dt>
  <dd><%= @solar_plate.sku %></dd>

  <dt>Eficiência:</dt>
  <dd><%= "#{@solar_plate.efficiency}%" %></dd>
  
  <dt>Potência Nominal:</dt>
  <dd><%= "#{@solar_plate.rated_power}Wp" %></dd>
</dl>