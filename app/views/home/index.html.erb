<h1>Bem vindo ao Ecommerce</h1>

<% if client_signed_in? %>
<%= link_to 'Ver Carrinho', cart_path %>
<%= link_to 'Sair', destroy_client_session_path, method: :delete, class: 'nav-link' %>
<% else %>
<%= link_to 'Entrar', new_client_session_path %>
<% end %>
<%= link_to 'Produtos', product_kits_path %> 

<div>
  <%= form_with(url: search_path, local: true, method: :get) do %>
    <%= label_tag(:q, "Fazer busca") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Buscar") %>
  <% end %>
</div>