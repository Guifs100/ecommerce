<h3><%= "Resultado da busca #{params[:q]}:" %></h3>

<% if @product_kits.blank? %>
  <h4>NÃ£o foi encontrado nenhum resultado para sua pesquisa</h4>
<% else %>
  <% @product_kits&.each do |product_kit| %>
    <% product_kit.each do |kit| %>
      <%= link_to kit.name, product_kit_path(kit) %>
    <% end %>
  <% end %>
<% end %>

